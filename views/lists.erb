<ul id="lists"> <% sort_lists(@lists) do |list| %>
    <li class="<%== "complete" if list_completed?(list) %>"> 
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_left(list) %> / <%= todos_count(list) %><p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>
